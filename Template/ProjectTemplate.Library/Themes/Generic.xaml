<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- We use the Generic.xaml looked up by the platform to aggregate all
         our dictionaries from our assembly. This helps us organize individual
         XAML files for each control we may have here independently. -->
    <ResourceDictionary.MergedDictionaries>
        <!-- This format is "ms-appx://<AssemblyName>/<Folders>/<FileName>" -->
        <ResourceDictionary Source="ms-appx:///ProjectTemplate.Library/CounterButton.xaml"/>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>
