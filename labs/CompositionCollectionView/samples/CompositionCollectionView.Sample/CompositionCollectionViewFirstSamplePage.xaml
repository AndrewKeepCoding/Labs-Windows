<Page x:Class="CompositionCollectionView.Sample.CompositionCollectionViewFirstSamplePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:CompositionCollectionView.Sample"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:compositioncollectionview="using:CommunityToolkit.Labs.WinUI.CompositionCollectionView"
      mc:Ignorable="d">

    <StackPanel>
        <TextBlock>Hello sdgsag</TextBlock>
        <TextBlock x:Name="PrimaryText"
                   FontFamily="{x:Bind TextFontFamily, Mode=OneWay}"
                   FontSize="{x:Bind TextSize, Mode=OneWay}"
                   Foreground="{x:Bind TextForeground, Mode=OneWay}"
                   Text="Add sample here."
                   Visibility="{x:Bind IsTextVisible, Mode=OneWay}" />
        <compositioncollectionview:CompositionCollectionView x:Name="compositionCollectionView" Width="800" Height="900"></compositioncollectionview:CompositionCollectionView>
    </StackPanel>
</Page>
