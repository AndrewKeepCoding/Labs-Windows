<Page
    x:Class="SettingsControlsExperiment.Samples.SettingsCardButtonSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <StackPanel
        Width="600"
        Padding="20"
        Spacing="32">
        <labs:SettingsCard
            Description="Windows and apps might use your country or region to give you local content"
            Header="Country or region"
            Icon="&#xF49A;"
            IsClickEnabled="True"
            IsEnabled="{x:Bind IsCardEnabled, Mode=OneWay}">
            <FontIcon FontSize="14" Glyph="&#xE097;" />
        </labs:SettingsCard>

        <labs:SettingsCard
            Description="Mouse, keyboard, pen, audio, displays and docks, other devices"
            Header="Devices"
            Icon="&#xE772;"
            IsClickEnabled="True"
            IsEnabled="{x:Bind IsCardEnabled, Mode=OneWay}">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Add device" Style="{StaticResource AccentButtonStyle}" />
                <FontIcon FontSize="14" Glyph="&#xE097;" />
            </StackPanel>
        </labs:SettingsCard>
    </StackPanel>
</Page>
